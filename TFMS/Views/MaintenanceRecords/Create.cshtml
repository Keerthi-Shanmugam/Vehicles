@model TFMS.Models.Maintenance

@{
    ViewData["Title"] = "Schedule New Maintenance";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0" style="border-radius: 10px;">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">Schedule New Maintenance</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="VehicleId" class="form-label"></label>
                    <select asp-for="VehicleId" class="form-select" asp-items="ViewBag.VehicleId"></select>
                    <span asp-validation-for="VehicleId" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ScheduledDate" class="form-label"></label>
                    <input asp-for="ScheduledDate" class="form-control" type="date" />
                    <span asp-validation-for="ScheduledDate" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Status" class="form-label"></label>
                    <select asp-for="Status" class="form-select" asp-items="ViewBag.StatusOptions"></select>
                    <span asp-validation-for="Status" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ActualCompletionDate" class="form-label"></label>
                    <input asp-for="ActualCompletionDate" class="form-control" type="date" />
                    <span asp-validation-for="ActualCompletionDate" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Cost" class="form-label"></label>
                    <input asp-for="Cost" class="form-control" />
                    <span asp-validation-for="Cost" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="OdometerReadingKm" class="form-label"></label>
                    <input asp-for="OdometerReadingKm" class="form-control" />
                    <span asp-validation-for="OdometerReadingKm" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PerformedBy" class="form-label"></label>
                    <input asp-for="PerformedBy" class="form-control" />
                    <span asp-validation-for="PerformedBy" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MaintenanceType" class="form-label"></label>
                    <input asp-for="MaintenanceType" class="form-control" />
                    <span asp-validation-for="MaintenanceType" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <a asp-action="Index" class="btn btn-outline-secondary">← Back</a>
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}