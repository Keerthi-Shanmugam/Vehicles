<!-- Views/Vehicles/Edit.cshtml -->
@model TFMS.Models.Vehicle

@{
    ViewData["Title"] = "Edit Vehicle";
}
<div class="container mt-4 col-10">
    <div class="card border-2" <div style="box-shadow: 0 6px 16px rgba(0, 0, 0, 0.15); border-radius: 10px; padding: 24px; background-color: #fff;">
        <div class="card-header text-white" style="background-color:var(--primary)">
            <h5 class="mb-0">Edit Vehicle</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="VehicleId" />

                <div class="mb-3">
                    <label asp-for="RegistrationNumber" class="form-label"></label>
                    <input asp-for="RegistrationNumber" class="form-control" />
                    <span asp-validation-for="RegistrationNumber" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Capacity" class="form-label"></label>
                    <input asp-for="Capacity" class="form-control" />
                    <span asp-validation-for="Capacity" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Status" class="form-label"></label>
                    <input asp-for="Status" class="form-control" />
                    <span asp-validation-for="Status" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="LastServicedDate" class="form-label"></label>
                    <input asp-for="LastServicedDate" class="form-control" />
                    <span asp-validation-for="LastServicedDate" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Make" class="form-label"></label>
                    <input asp-for="Make" class="form-control" />
                    <span asp-validation-for="Make" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Model" class="form-label"></label>
                    <input asp-for="Model" class="form-control" />
                    <span asp-validation-for="Model" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ManufacturingYear" class="form-label"></label>
                    <input asp-for="ManufacturingYear" class="form-control" />
                    <span asp-validation-for="ManufacturingYear" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="FuelType" class="form-label"></label>
                    <input asp-for="FuelType" class="form-control" />
                    <span asp-validation-for="FuelType" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CurrentOdometerKm" class="form-label"></label>
                    <input asp-for="CurrentOdometerKm" class="form-control" />
                    <span asp-validation-for="CurrentOdometerKm" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <a asp-action="Index" class="btn btn-outline-secondary">← Back</a>
                    <input type="submit" value="Save" class="btn btn-success" style="background-color:var(--accent)" />
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
