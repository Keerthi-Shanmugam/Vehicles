@model TFMS.Models.Vehicle

@{
    ViewData["Title"] = "Delete Vehicle";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0" style="border-radius: 10px;">
        <div class="card-header text-white" style="background-color:var(--primary)">
            <h5 class="mb-0">Delete Vehicle</h5>
        </div>
        <div class="card-body">
            <h6 class="text-danger"><i class="fa-solid fa-triangle-exclamation"></i> Are you sure you want to delete this vehicle?</h6>

            @* Display error message if deletion is not allowed *@
            @if (ViewBag.DeleteError != null)
            {
                <div class="alert alert-danger mt-3" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> @ViewBag.DeleteError
                </div>
            }
            @if (TempData["DeleteError"] != null)
            {
                <div class="alert alert-danger mt-3" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["DeleteError"]
                </div>
            }

            <dl class="row mt-4 mb-0">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.RegistrationNumber)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.RegistrationNumber)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Capacity)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Capacity)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Status)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.LastServicedDate)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.LastServicedDate)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Make)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Make)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Model)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Model)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ManufacturingYear)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ManufacturingYear)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FuelType)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FuelType)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CurrentOdometerKm)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CurrentOdometerKm)</dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary">← Back to List</a>
            <form asp-action="Delete" class="m-0">
                <input type="hidden" asp-for="VehicleId" />
                <input type="submit" value="Delete" class="btn btn-danger" @(ViewBag.DeleteError != null ? "disabled" : "") />
            </form>
        </div>
    </div>
</div>

