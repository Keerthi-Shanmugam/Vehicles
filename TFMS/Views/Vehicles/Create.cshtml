<!-- Views/Vehicles/Create.cshtml -->
@model TFMS.Models.Vehicle

@{
    ViewData["Title"] = "Create Vehicle";
}

@* <h1>Create</h1>

<h4>Vehicle</h4> *@
<hr />
<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header text-white" style="background-color:var(--primary)">
            <h5 class="mb-0">Create Vehicle</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="RegistrationNumber" class="form-label"></label>
                    <input asp-for="RegistrationNumber" class="form-control" />
                    <span asp-validation-for="RegistrationNumber" class="text-danger small"></span>
                </div>

                <!-- Repeat pattern for each field -->
                <div class="mb-3">
                    <label asp-for="Capacity" class="form-label"></label>
                    <input asp-for="Capacity" class="form-control" />
                    <span asp-validation-for="Capacity" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Status" class="form-label"></label>
                    <input asp-for="Status" class="form-control" />
                    <span asp-validation-for="Status" class="text-danger small"></span>
                </div>

                <!-- ... (other fields remain the same, wrapped in 'mb-3') ... -->

                <div class="d-flex justify-content-between align-items-center">
                    <a asp-action="Index" class="btn btn-outline-secondary">← Back</a>
                    <input type="submit" value="Create" class="btn btn-success" style="background-color:var(--accent)"  />
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}